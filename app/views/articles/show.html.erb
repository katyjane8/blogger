<h1><%= @article.title %></h1>
<p><%= @article.body %></p><br />
<p><%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"} %></p>
<p><%= link_to "Edit this article", edit_article_path(@article) %></p><br>
<p><%= link_to "<< Back to Articles List", articles_path %></p><br>

<h3>Comments (<%= @article.comments.size %>)</h3>
<p><%= render partial: 'articles/comment', collection: @article.comments.reverse %></p><br />

<p><%= render partial: 'comments/form' %></p>
